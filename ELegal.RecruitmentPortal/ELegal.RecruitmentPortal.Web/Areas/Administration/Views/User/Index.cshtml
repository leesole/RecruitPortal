@model IEnumerable<ELegal.RecruitmentPortal.Model.UserProfile>

@{
    ViewBag.Title = "Index";
}
<!-- Heading -->
<div class="heading-buttons">
    <h1>@ViewBag.Title <span>@ViewBag.SubTitle</span></h1>
    <div class="buttons pull-right">
        <a href="@Url.Action("Create", "User", new { area = "Administration" })" class="btn btn-primary btn-icon glyphicons circle_plus"><i></i>Add User</a>
    </div>
    <div class="clearfix"></div>
</div>
<div class="separator bottom"></div>
<!-- // Heading END -->

<table class="table table-striped table-bordered table-white table-responsive swipe-horizontal table-primary">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>Roles
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="selectable">
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @if (item.Roles != null)
                    {
                        foreach (var role in item.Roles)
                        {
                            @role.RoleName
                            if (role != item.Roles.Last())
                            {
                                <text>
                                    , </text>
                            }
                        }
                    }
                </td>
                <td>
                    <a href=" @Url.Action("Details", "User", new { area = "Administration", id = item.UserId }) " class="btn-action glyphicons eye_open btn-default"><i></i></a>
                    <a href=" @Url.Action("Edit", "User", new { area = "Administration", id = item.UserId }) " class="btn-action glyphicons pencil btn-success"><i></i></a>
                    <a href=" @Url.Action("Delete", "User", new { area = "Administration", id = item.UserId }) " class="btn-action glyphicons remove_2 btn-danger"><i></i></a>

                </td>
            </tr>
        }
    </tbody>
</table>
