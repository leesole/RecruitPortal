@using ELegal.RecruitmentPortal.Web.Models
@model ELegal.RecruitmentPortal.Web.Areas.Administration.ViewModels.User.UserEditModel

<div class="heading-buttons">
    <h1>@ViewBag.Title</h1>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <!-- Row -->
    <div class="row-fluid">

        <!-- Column -->
        <div class="span6">
            <div class="widget row-fluid widget-heading-simple widget-body-gray" data-toggle="collapse-widget">

                <div class="widget-head">
                    <h4 class="heading">Main Details</h4>
                </div>

                <div class="widget-body">

                    <div class="editor-label">
                        @Html.LabelFor(model => model.UserProfile.UserName, " Email Address")
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.UserProfile.UserName)
                        @Html.ValidationMessageFor(model => model.UserProfile.UserName)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.UserProfile.FirstName)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.UserProfile.FirstName)
                        @Html.ValidationMessageFor(model => model.UserProfile.FirstName)
                    </div>

                    <div class="editor-label">
                        @Html.LabelFor(model => model.UserProfile.LastName)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.UserProfile.LastName)
                        @Html.ValidationMessageFor(model => model.UserProfile.LastName)
                    </div>


                </div>
            </div>
            @if (Model.ScreenType != ScreenType.Details)
            {
                <p>
                    <button type="submit" value="create" id="btn-loading" class="btn btn-primary" data-loading-text="Custom Loading Text ...">Save</button>
                </p>

                if (Model.ScreenType == ScreenType.Edit)
                {
                    @Html.HiddenFor(o => o.UserProfile.UserId)
                }
            }
        </div>
    </div>
}



<div>
    <a href="@Url.Action("Index", "User", new { area = "Administration" })">Back to users</a>
</div>

 @section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @if (Model.ScreenType == ScreenType.Details)
    {
        <script type="text/javascript">

            $("input").prop('disabled', true);
        </script>
    }

}

